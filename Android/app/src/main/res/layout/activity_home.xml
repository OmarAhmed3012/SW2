<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dr_home"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item1">

                        <View android:layout_width="80dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/endback"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/img1_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/profile"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/img1_icon"
                            android:layout_margin="10dp"
                            app:layout_constraintTop_toTopOf="@id/img1_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/ColorWhite"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="Add task "/>
                        <TextView
                            android:id="@+id/textDes1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:maxLines="2"
                            android:layout_marginEnd="80dp"
                            android:text="you can add task to contuous work after you naeed"
                            android:textColor="@color/ColorText"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/title1"
                            app:layout_constraintTop_toBottomOf="@id/title1"
                            app:layout_constraintEnd_toEndOf="@id/title1"
                            android:textSize="16sp"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item2">

                        <View android:layout_width="80dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/endback"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/img2_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/profile"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/img2_icon"
                            android:layout_margin="10dp"
                            app:layout_constraintTop_toTopOf="@id/img2_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/ColorWhite"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="Add task "/>
                        <TextView
                            android:id="@+id/textDes2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:maxLines="2"
                            android:layout_marginEnd="80dp"
                            android:text="you can add task to contuous work after you naeed"
                            android:textColor="@color/ColorText"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/title2"
                            app:layout_constraintTop_toBottomOf="@id/title2"
                            app:layout_constraintEnd_toEndOf="@id/title2"
                            android:textSize="16sp"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/alltas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item3">

                        <View android:layout_width="80dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/endback"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/img3_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/profile"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/img3_icon"
                            android:layout_margin="10dp"
                            app:layout_constraintTop_toTopOf="@id/img3_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/ColorWhite"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="Show My Taskes "/>
                        <TextView
                            android:id="@+id/textDes3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:maxLines="2"
                            android:layout_marginEnd="80dp"
                            android:text="you can add task to contuous work after you naeed"
                            android:textColor="@color/ColorText"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/title3"
                            app:layout_constraintTop_toBottomOf="@id/title3"
                            app:layout_constraintEnd_toEndOf="@id/title3"
                            android:textSize="16sp"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item4"
                        >

                        <View android:layout_width="80dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/endback"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/img4_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/profile"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/img4_icon"
                            android:layout_margin="10dp"
                            app:layout_constraintTop_toTopOf="@id/img4_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/ColorWhite"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="Edit Profile "/>
                        <TextView
                            android:id="@+id/textDes4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:maxLines="2"
                            android:layout_marginEnd="80dp"
                            android:text="you can add task to contuous work after you naeed"
                            android:textColor="@color/ColorText"
                            app:layout_constraintStart_toStartOf="@id/title4"
                            app:layout_constraintTop_toBottomOf="@id/title4"
                            app:layout_constraintEnd_toEndOf="@id/title4"
                            android:textSize="16sp"
                            android:paddingBottom="12dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_margin="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"
                    android:onClick="showPopup"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        app:itemTextColor="@color/cardview_dark_background"
        app:itemIconTint="@color/cardview_dark_background"
        app:menu="@menu/drewmenu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>